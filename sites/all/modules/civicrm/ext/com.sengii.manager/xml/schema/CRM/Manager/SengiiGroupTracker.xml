<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Updates</base>
  <class>SengiiGroupTracker</class>
  <name>civicrm_sengii_group_tracker</name>
  <comment>Tracking table for group changes</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique SengiiGroupTracker ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>group_id</name>
    <type>int unsigned</type>
    <comment>FK to Group table</comment>
  </field>
  <foreignKey>
    <name>group_id</name>
    <table>civicrm_group</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>modified_date</name>
    <type>datetime</type>
    <comment>Date group was modified</comment>
  </field>
</table>
